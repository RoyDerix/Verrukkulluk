{% extends "main.html.twig" %}



{% block banner %}

    <div class="container">
        <div id="carousel" class="carousel slide w-100" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="height: 400px;">
                <div class="carousel-item active">
                    <img src="afbeeldingen/naanbroodpizza.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="afbeeldingen/courgettesoep.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="afbeeldingen/enchiladas.jpg" class="d-block w-100">
                </div>
                <a class="carousel-control-prev" href="#carousel" data-slide="prev" style="width: 0px">
                <span class="carousel-control-prev-icon"></span> 
                <span class="sr-only">Previous</span></a> 
                <a class="carousel-control-next" href="#carousel" data-slide="next" style="width: 0px">
                <span class="carousel-control-next-icon"></span> 
                <span class="sr-only">Next</span></a>
            </div>
        </div>
        <div class="carousel-text">
            <div class="row">
                <div class="col-6">
                    <img src="assets/img/logo-v2.png" style="width: 300px"/>
                </div>
                <div class="col-6">
                    <div id="myNav" class="overlay">
                        <div class="overlay-content" style="overflow-x: hidden">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="assets/img/logo-v2.png" style="width: 250px; margin-left: 20px"/>
                                </div>
                                <div class="col-md-4" style="margin-top: 20px">
                                    <a href="index.php?action=boodschappenlijst"><h1 class="green">Boodschappenlijst</h1></a>
                                </div>
                                <div class="col-md-3" style="margin-top: 20px;">
                                    <a href="index.php?action=favorieten_tonen"><h1 class="green">Favorieten</h1></a>
                                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="font-size: 60px; cursor: pointer; color: var(--lighter-orange); text-align: right; margin-right: 54px" onclick="openNav()">&#9776;</div>
                </div>
            </div>
        </div>
    </div>
    

    <script>
        function openNav() {
            document.getElementById("myNav").style.height = "20%";
        }

        function closeNav() {
            document.getElementById("myNav").style.height = "0%";
        }
    </script>



{% endblock %}


{% block content %}

    <div class="row g-5">

        {% for record in data %}
            <div class="col-lg-6">
                <div class="card">
                    <div style="height: 200px; overflow: hidden;">
                        <img src="{{record.receptfoto}}" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <h1 class="card-title" style="color: var(--lighter-green)">
                                    {{record.titel_recept}}
                                </h1>
                            </div>
                            <div class="col-lg-4">
                                {% for i in 1..5 %}
                                    {% if loop.index <= record.score %}
                                        <i class="fas fa-star hpstar" data-value="{{loop.index}}"></i>
                                    {% else %}
                                        <i class="far fa-star hpstar" data-value="{{loop.index}}"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <h3>Type: {{record.type}}</h3>
                            </div>
                            <div class="col-lg-6">
                                <h3>Keuken: {{record.keuken}}</h3>
                            </div>
                        </div>
                        <p class="card-text" style="min-height: 100px; font-size: 15;">
                            {{record.samenvatting_beschrijving}}
                        </p>
                        <div class="row">
                            <div class="col-lg-5">
                                <a href="index.php?recept_id={{record.id}}&action=detailpagina" 
                                    class="btn btn-primary button-red">
                                    <h4>Smullen!</h4></a> 
                            </div>
                            <div class="col-lg-7">
                                <div class="row">
                                    <div class="col-4">
                                        <i class="fas fa-users" style="color: var(--darker-red)"></i> 4
                                    </div>

                                    <div class="col-4">
                                        <i class="fas fa-euro-sign" style="color: var(--darker-red)"></i> 
                                        {{((record.totale_prijs / 4)|round(2))|number_format(2, ',', '.')}}
                                    </div>

                                    <div class="col-4">
                                        <i class="fas fa-fire-alt" style="color: var(--darker-red)"></i> 
                                        {{(record.totale_calorieen / 4)|round}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}