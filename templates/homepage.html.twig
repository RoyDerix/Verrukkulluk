{% extends "main.html.twig" %}



{% block banner %}

    <div class="container">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="height: 400px;">
                <div class="carousel-item active">
                    <img src="afbeeldingen/naanbroodpizza.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="afbeeldingen/courgettesoep.jpg" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="afbeeldingen/enchiladas.jpg" class="d-block w-100">
                </div>
                <a class="carousel-control-prev" href="#carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span> 
                <span class="sr-only">Previous</span></a> 
                <a class="carousel-control-next" href="#carousel" data-slide="next">
                <span class="carousel-control-next-icon"></span> 
                <span class="sr-only">Next</span></a>
            </div>
        </div>
        <div class="carousel-text">
            <div class="text-left">
                <img src="assets/img/logo-v2.png" style="width: 300px"/>
            </div>
        </div>
    </div>

{% endblock %}


{% block content %}

    <div class="row g-5">

        {% for record in data %}
            <div class="col-lg-6">
                <div class="card">
                    <div style="height: 200px; overflow: hidden;">
                        <img src="{{record.receptfoto}}" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <h1 class="card-title" style="color: var(--lighter-green)">
                                    {{record.titel_recept}}
                                </h1>
                            </div>
                            <div class="col-lg-4">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <h4>Type: {{record.type}}</h4>
                            </div>
                            <div class="col-lg-6">
                                <h4>Keuken: {{record.keuken}}</h4>
                            </div>
                        </div>
                        <p class="card-text">
                            {{record.samenvatting_beschrijving}}
                        </p>
                        <div class="row">
                            <div class="col-lg-5">
                                <a href="index.php?recept_id={{record.id}}&action=detailpagina" 
                                    class="btn btn-primary"
                                    style="background-color: var(--darker-red);
                                            border-color: var(--darker-red);">
                                    <h4>Smullen!</h4></a>
                            </div>
                            <div class="col-lg-7">
                                <div class="row">
                                    <div class="col-4">
                                        <i class="fas fa-users" style="color: var(--darker-red)"></i> 4
                                    </div>

                                    <div class="col-4">
                                        <i class="fas fa-euro-sign" style="color: var(--darker-red)"></i> 
                                        {{((record.totale_prijs / 4)|round(2))|number_format(2, ',', '.')}}
                                    </div>

                                    <div class="col-4">
                                        <i class="fas fa-fire-alt" style="color: var(--darker-red)"></i> 
                                        {{(record.totale_calorieen / 4)|round}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


